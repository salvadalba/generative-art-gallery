# Environment Configuration
NODE_ENV=production

# Database Configuration
DB_PASSWORD=your_secure_database_password_here
DATABASE_URL=postgresql://postgres:${DB_PASSWORD}@postgres:5432/artgallery

# Redis Configuration
REDIS_URL=redis://redis:6379

# IPFS Configuration
IPFS_API_KEY=your_ipfs_api_key_here
IPFS_API_SECRET=your_ipfs_api_secret_here
IPFS_GATEWAY=https://ipfs.io/ipfs/

# Ethereum Network Configuration
VITE_NETWORK=mainnet
VITE_INFURA_PROJECT_ID=your_infura_project_id_here
VITE_ALCHEMY_API_KEY=your_alchemy_api_key_here

# Smart Contract Addresses
CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# GAN Service Configuration
MODEL_PATH=/app/models
MAX_CONCURRENT_GENERATIONS=3
GENERATION_TIMEOUT=300

# Security Configuration
JWT_SECRET=your_jwt_secret_here_minimum_32_characters
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring Configuration
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=info

# Frontend Configuration
VITE_API_URL=http://localhost:8000
VITE_IPFS_GATEWAY=https://ipfs.io/ipfs/
VITE_CONTRACT_ADDRESS=${CONTRACT_ADDRESS}
VITE_NETWORK=${VITE_NETWORK}
VITE_INFURA_PROJECT_ID=${VITE_INFURA_PROJECT_ID}

# AWS Configuration (for cloud deployment)
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=your_aws_account_id

# SSL Configuration (for HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem